<!--                    <toolchains>-->
<!--                        <jdk>-->
<!--                            <version>17</version>-->
<!--                            <vendor>oracle</vendor>-->
<!--                        </jdk>-->
<!--                    </toolchains>-->
<!--                </configuration>-->
<!--            </plugin>-->
        </plugins>
    </build>

</project>
